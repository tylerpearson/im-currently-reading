<%= form_for @message, html: {class: "form"} do |f| %>
    <div class="step-1 step start">
        <div class="narrow-container" style="display: block;">

            <p class="input-prompt">Hi! What book are you reading?</p>
            <input type="text" placeholder="Book Title" class="text-input" id="book-title-input">

            <i class="icon-circle-arrow-right next-button"></i>

        </div><!--end .narrow-container -->
    </div><!-- end .step-1 -->

    <div class="step-2 step books loading top-align" style="display: none;">

        <div class="loading-message"></div><!--end .loading-message -->

        <div class="book-list">

            <ul class="matching-books" id="matching-books"></ul>

            <script id="book-template" type="x-handlebars-template">
               {{#each this}}
                <li class="book-preview cf book-preview-{{addition @index to=1}}" data-amazon-asin-id="{{ asinId }}">
                    <div class="preview-left">
                      <div class="preview-book-wrap">
                        <div class="preview-book" style="background-image: url('{{ images.large.URL }}');"></div>
                      </div>
                    </div>
                    <div class="preview-right">
                      <h1 class="preview-book-title">{{ title }}</h1>
                      <h2 class="preview-book-author">{{ author }}</h2>
                    </div>
                </li>
                {{/each}}
            </script>â€¨

            <%= hidden_field(:book, :amazon_asin, :id => 'amazon_asin') %>

        </div><!--end .book-list -->
    </div><!--end .step-2 -->

    <div class="step-3 step" style="display: none;">
        <div class="narrow-container">

            <div class="input-area">
                <label class="input-prompt">What's your twitter username?</label>
                <%= f.text_field :twitter_username %>
            </div><!-- .input-area -->

            <div class="input-area">
                <label class="input-prompt">Want to add a message about the book?</labeL>
                <%= f.text_area :message %>
            </div><!-- .input-area -->

            <%= f.submit "Create" %>
        </div><!--end .narrow-container-->
    </div><!--end .step-4 -->
<% end %>